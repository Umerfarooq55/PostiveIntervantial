<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"

        >
        <ImageView
            android:id="@+id/tv_header_title"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"

            android:src="@drawable/app_logo_a" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayou

        android:id="@+id/constraintLayout"
        android:layout_width="455dp"
        android:layout_height="66dp"

        android:background="@color/light_grey"
        android:layout_marginStart="1dp"
        tools:layout_editor_absoluteY="127dp"
        tools:layout_editor_absoluteX="1dp">

    </RelativeLayou>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="316dp"
        android:layout_height="27dp"
        android:text="Describe the breach of health and safety below:"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteY="158dp"
        tools:layout_editor_absoluteX="32dp" />

    <RelativeLayout
        android:layout_width="433dp"
        android:layout_height="470dp"
        android:id="@+id/constraintLayout2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintHorizontal_bias="0.509">

        <RelativeLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="369dp"
            android:layout_height="63dp"
            android:background="@color/light_grey"
            tools:layout_editor_absoluteX="-5dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView9">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="23dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="8dp"
                android:text="Contract Code:"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="429dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/linearbackground"
            android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="351dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/linearbackground"
            tools:layout_editor_absoluteY="612dp"
            tools:layout_editor_absoluteX="0dp" />

        <RelativeLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="351dp"
            android:layout_height="82dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/textColoureWhite"
            tools:layout_editor_absoluteY="388dp"
            tools:layout_editor_absoluteX="8dp">

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="82dp"
                android:background="@color/linear_one"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/textView18"
                android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.946"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintVertical_bias="1.0">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="36dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.487"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Select Code"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.033"
                app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
                app:layout_constraintVertical_bias="0.57" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Description.."
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.04" />

        <RelativeLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="369dp"
            android:layout_height="63dp"
            android:background="@color/light_grey"
            tools:layout_editor_absoluteY="560dp"
            tools:layout_editor_absoluteX="-2dp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contract Code:"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="23dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginLeft="29dp"
                app:layout_constraintLeft_toLeftOf="parent" />
        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="455dp"
        android:layout_height="103dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="2dp"
        android:layout_weight="0.03"
        android:background="@color/linear_one"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="220dp"
            android:layout_height="41dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="26dp"
            android:text="health and safety breach"
            android:textAllCaps="true"
            android:textColor="@color/textColoureWhite"
            android:textSize="18sp"
            android:textStyle="bold" />
    </FrameLayout>

</RelativeLayout>